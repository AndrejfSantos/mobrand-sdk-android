<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity$PlaceholderFragment">

    <requestFocus />


    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <com.mobrand.appwall.view.GridRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/appwall_horizontal_margin"
        android:layout_marginRight="@dimen/appwall_horizontal_margin"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/list_cell_animation"
        android:paddingTop="?attr/actionBarSize">

    </com.mobrand.appwall.view.GridRecyclerView>

</RelativeLayout>
