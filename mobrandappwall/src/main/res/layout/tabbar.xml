<?xml version="1.0" encoding="utf-8"?>
<com.mobrand.view.TabBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wally="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/tabbar"

    android:gravity="center_vertical"

    android:orientation="horizontal"
    wally:tabBarColor="#ffffff"
    wally:tabBarSize="2dp"
    tools:showIn="@layout/appwall">

    <com.mobrand.view.TabView
        android:id="@+id/tab_toplist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"

        wally:src="@drawable/ic_action_toplist" />


    <com.mobrand.view.TabView
        android:id="@+id/tab_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        wally:src="@drawable/ic_action_games" />

    <com.mobrand.view.TabView
        android:id="@+id/tab_latest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        wally:src="@drawable/ic_action_android"/>


</com.mobrand.view.TabBarView>