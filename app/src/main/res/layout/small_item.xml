<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android" >



<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/bg_card"
    android:layout_height="230dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/appicon"
        android:layout_width="144dp"
        android:layout_margin="5dp"

        android:paddingTop="5dp"
        android:layout_height="144dp" android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:layout_below="@id/appicon" android:layout_margin="8dp"/>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content" android:layout_alignStart="@id/name"
        android:layout_height="wrap_content" android:numStars="5" style="?android:ratingBarStyleSmall" android:layout_below="@id/name"/>

</RelativeLayout>

    <FrameLayout
        android:id="@+id/loading"
        android:visibility="gone"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</FrameLayout>